# Stage 1: build
FROM golang:1.25.3-alpine AS builder
WORKDIR /src

COPY backend/go.mod backend/go.sum ./
RUN go mod download
COPY backend/ .

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o /bin/flowboard ./cmd

# Stage 2: runtime
FROM gcr.io/distroless/static-debian11
COPY --from=builder /bin/flowboard /bin/flowboard
EXPOSE 8080
USER 1000
ENTRYPOINT ["/bin/flowboard"]
